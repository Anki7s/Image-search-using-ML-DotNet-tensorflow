@{
    ViewData["Title"] = "Home Page";
}
@* Index View For searching *@
<div class="card border-light my-3">
    <div class="col-md-6 card-body offset-3">
        <div class="form-horizontal">
            <div class="text-center search">
                <img src="~/img/searchImage.png" height="100" width="100" class="delete-img" />
            </div>
            <div class="form-group">
                <form method="post" enctype="multipart/form-data">
                    <input type="file" name="image" class="form-control" required />
                    <div class="search-btn text-center">
                        <input type="submit" value="Search" class="btn btn-primary btn-lg   " />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @if (ViewBag.Probability != null)
        {
            var searchLink = "https://duckduckgo.com/?q=" + ViewBag.PredictedLabel;
            var wikiresult = "https://en.wikipedia.org/wiki/" + ViewBag.PredictedLabel;

            <h5>To get more information please click below link.</h5>
            <h5><a href="@searchLink" target="_blank">Click Here for Search Engine result </a></h5>
            <br>

            <h5>please click below link to get infromation from wikipedia.</h5>
            <h5><a href="@wikiresult" target="_blank">Click Here for Search Engine result </a></h5>

        }
    </div>
    <div class="col-md-4 card offset-md-2 c">
        @if (ViewBag.Probability != null)
        {
            <img src="~/img/img.jpg" class="img-thumbnail" />
            <div class="card-body">
                <h5 class="font-weight-bold my-2"> @ViewBag.PredictedLabel</h5>
                <h5>Probability: @ViewBag.Probability</h5>
            </div>
        }

    </div>
</div>
